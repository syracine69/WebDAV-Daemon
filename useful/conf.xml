<?xml version="1.0" encoding="utf-8" ?>
<server-config xmlns="http://couling.me/webdavd">
	<server>
		<listen>
			<port>8080</port>
			<encryption>none</encryption>
		</listen>
		<listen>
			<port>443</port>
			<encryption>ssl</encryption>
		</listen>
		<rap-binary>build/rap</rap-binary>
		<pgsql-host>127.0.0.1</pgsql-host>
		<pgsql-port>5432</pgsql-port>
		<pgsql-database>my_database</pgsql-database>
		<pgsql-user>my_user</pgsql-user>
		<pgsql-password>my_password</pgsql-password>
		<static-response-dir>package-with/share</static-response-dir>
		<ssl-cert>
			<certificate>/etc/ssl/certs/local/server.crt</certificate>
			<key>/etc/ssl/private/server.key</key>
		</ssl-cert>
		<chroot-path>~</chroot-path>
	</server>
</server-config>

